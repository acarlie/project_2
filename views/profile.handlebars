{{> nav/nav-block user=true register=false}}

<div class="container theme-body">

  <header class="header-wrap">
    <h1 class="text-center"><span class="fas fa-user-circle"></span></h1>
    <div class="userId">
      <h3 class="theme-title-div">{{userInfo.firstName}} {{userInfo.lastName}}</h3>
    </div>
    <h3 id="update-err-msg"></h3>
  </header>

  <div id="user-profle" class="row">
    <div class="col col-md-12">
      <ul class="list-group mt-4">
        <li class="list-group-item"><strong>Email:</strong> {{userInfo.email}}</li>
        <li class="list-group-item"><strong>Street:</strong> {{userInfo.address}}</li>
        <li class="list-group-item flex">
          <div class="flex-list-group-item"><strong>City:</strong> {{userInfo.city}}</div>
          <div class="flex-list-group-item"><strong>State:</strong> {{userInfo.state}}</div>
          <div class="flex-list-group-item"><strong>Zip:</strong> {{userInfo.zipcode}}</div>
        </li>
      </ul>
      <h5 class="theme-title-div m-4">Pet Information</h5>
      <ul class="list-group mt-4">
        <li class="list-group-item"><strong>Pet Name:</strong> {{userInfo.petName}}</li>
        <li class="list-group-item"><strong>Pet Type:</strong> {{userInfo.pet}}</li>
        <li class="list-group-item"><strong>Pet Age:</strong> {{userInfo.petAge}}</li>
      </ul>
      <button id="user-edit" class="btn btn-secondary btn-100 mt-4">Edit Profile</button>
    </div>
  </div>

  <div id="user-form-cont" class="hidden">
    {{> forms/account-form-block id="user-form" isUpdate=true}}
  </div>

  <div class="modal" id="delete-user-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Re-Enter Credentials to delete user</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <div class="modal-body">
          <h3 id="err-msg"></h3>
          <form>
            <div class="form-group">
              <label for="userEmail">Email:</label>
              <input type="text" class="form-control" id="userEmail">
            </div>
            <div class="form-group">
              <label for="userPassword">Password:</label>
              <input type="password" class="form-control" id="userPassword">
            </div>
          </form>
        </div>

        <div class="modal-footer">
          <button id="confirm-delete" type="button" data-id="{{userInfo.id}}" class="btn btn-primary">Confirm
            Delete</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Nah I'll stay</button>
        </div>
      </div>
    </div>
  </div>

</div>