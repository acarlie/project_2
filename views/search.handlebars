{{> nav/nav-block}}

<div id="home">
    <div class="container theme-body">
        <div class="row">
            <div class="col col-md-12">
                <h3 class="theme-title-div mb-4">Nearby Buddies</h3>
                <ul id="example-list" class="list-group">
                    {{#each results}}
                        <li data-id="{{this.id}}" class="list-group-item">
                            <a href="viewPage/{{this.id}}">{{this.firstName}}</a>
                            <p>Pet: {{this.petName}}</p>
                            <p>age: {{this.petAge}}</p>
                            <button class="btn btn-danger float-right message">Message</button>
                        </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>
