<form id={{id}} class="user-form">
    <h3 id="err-msg"></h3>
    <div class="form-row">
        <div class="form-group col col-md-12">
            <label for="inputFirst">First Name</label>
            <input type="text" class="form-control" id="inputFirst" placeholder="John" {{#if isUpdate}}value="{{userInfo.firstName}}"{{/if}}>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col col-md-12">
            <label for="inputLast">Last Name</label>
            <input type="text" class="form-control" id="inputLast" placeholder="Doe" {{#if isUpdate}}value="{{userInfo.lastName}}"{{/if}}>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col col-md-12">
            <label for="inputEmail">Email</label>
            <input type="email" class="form-control" id="inputEmail" placeholder="Email" {{#if isUpdate}}value="{{userInfo.email}}"{{/if}}>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col col-md-12">
            <label for="inputPassword">Password</label>
            <input type="password" class="form-control" id="inputPassword" placeholder="Password">
        </div>
    </div>

    <h5 class="theme-title-div">Address</h5>

    <div class="form-row">
        <div class="form-group col col-md-12">
            <label for="street">Street Address</label>
            <input type="text" class="form-control" id="street" placeholder="Street Address" {{#if isUpdate}}value="{{userInfo.address}}"{{/if}}>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col col-md-12">
            <label for="city">City</label>
            <input type="text" class="form-control" id="city" placeholder="City" {{#if isUpdate}}value="{{userInfo.city}}"{{/if}}>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col col-md-12">
            <label for="state">State</label>
            <select class="custom-select" id="state" name="state">
                {{#if isUpdate}}
                    {{#select userInfo.state}}
                        {{> forms/states-block}}
                    {{/select}}
                {{else}}
                    <option selected disabled>Select State</option>
                    {{> forms/states-block}}
                {{/if}}
            </select>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col col-md-12">
            <label for="zipCode">Zip Code</label>
            <input type="number" min="10000" max="99999" class="form-control" id="zipCode" {{#if isUpdate}}value="{{userInfo.zipcode}}"{{/if}}>
        </div>
    </div>

    <h5 class="theme-title-div">Pet Information</h5>

    <div class="form-row">
        <div class="form-group col col-md-12">
            <label for="petName">Pet Name</label>
            <input type="text" class="form-control" id="petName" placeholder="Pet Name" {{#if isUpdate}}value="{{userInfo.petName}}"{{/if}}>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col col-md-12">
            <label for="petType">Pet Type</label>
            <select class="custom-select" id="petType">
                {{#if isUpdate}}
                    {{#select userInfo.pet}}
                        <option value="dog">Dog</option>
                        <option value="cat">Cat</option>
                    {{/select}}
                {{else}}
                    <option selected disabled>Pet Type</option>
                    <option value="dog">Dog</option>
                    <option value="cat">Cat</option>
                {{/if}}
               
            </select>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col col-md-12">
            <label for="petAge">Pet Age</label>
            <input type="number" min="0" max="25" class="form-control" id="petAge" {{#if isUpdate}}value="{{userInfo.petAge}}"{{/if}}>
        </div>
    </div>

    <div>
        <h2 id="message"></h2>
    </div>
    {{#if isUpdate}}
        <button type="submit" id="update-user" data-id="{{userInfo.id}}" class="btn btn-primary btn-100">Update</button>
        <hr>
        <div class="flex mt-4">
            {{#unless userInfo.isAdmin}}
            <button type="submit" id="delete-user" class="btn btn-danger btn-100">Delete</button>
            {{/unless}}
            <button type="submit" id="view-user" data-id="{{userInfo.id}}" class="btn btn-primary btn-100">Refresh</button>
            <button id="cancel-edit" class="btn btn-secondary btn-100">Cancel</button>
        </div>

    {{else}}
        <button type="submit" id="add-user" class="btn btn-primary btn-100">Submit</button>
    {{/if}}

</form>